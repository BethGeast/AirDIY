<script>document.addEventListener("DOMContentLoaded", function() {
  const filterIcons = document.querySelectorAll('.filter-icon');
  filterIcons.forEach(function(icon) {
    icon.addEventListener('click', function() {
      icon.classList.toggle('active');
      // Add filtering logic here
    });
  });
});
document.addEventListener("DOMContentLoaded", function() {
  const priceFilterIcon = document.querySelector('.price-filter-icon');
  const priceSliderWrapper = document.querySelector('.price-slider-wrapper');

  priceFilterIcon.addEventListener('click', function() {
    if (priceSliderWrapper.style.display === 'flex') {
      priceSliderWrapper.style.display = 'none';
    } else {
      priceSliderWrapper.style.display = 'flex';
    }
  });
});

</script>



<div class="container mt-5">
  <div class="row mb-3">
    <div class="col-md-12">
      <p>Filters:</p>
      <div class="filter-group">
        <div class="filter-icons-left">
          <div class="filter-icon small-dog-filter active" data-value="small">
            <i class="fas fa-dog"></i>
          </div>
          <div class="filter-icon medium-dog-filter active" data-value="medium">
            <i class="fas fa-dog"></i>
          </div>
          <div class="filter-icon big-dog-filter active" data-value="big">
            <i class="fas fa-dog"></i>
          </div>
        </div>
        <div class="price-filter-wrapper">
          <div class="price-filter-icon">
            <i class="fas fa-dollar-sign"></i>
          </div>
          <div class="price-slider-wrapper">
            <label for="priceRangeFilter">Min:</label>
            <input type="range" class="form-control-range" id="priceRangeFilter" min="0" max="100" value="0">
            <label for="priceRangeFilter">Max:</label>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Cards Section -->
  <% if @items.present? %>
    <% @items.in_groups_of(3, false) do |row_items| %>
      <div class="row">
        <% row_items.compact.each do |item| %>
          <div class="col-md-4">
            <div class="card mb-4">
              <div id="carousel<%= item.id %>" class="carousel slide">
                <div class="carousel-inner">
                  <% item.photos.each_with_index do |photo, index| %>
                    <div class="carousel-item <%= 'active' if index == 0 %>">
                      <%= cl_image_tag photo.key, class: "d-block w-100 rounded-top" %>
                    </div>
                  <% end %>
                </div>
                <% if item.photos.count > 1 %>
                  <a class="carousel-control-prev" href="#carousel<%= item.id %>" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                  </a>
                  <a class="carousel-control-next" href="#carousel<%= item.id %>" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                  </a>
                <% end %>
              </div>
              <%= link_to new_item_favorite_path(item) do %>
                <button class="favorite-btn far fa-heart"></button>
              <% end %>
              <div class="card-body">
                <h5 class="card-title"><%= link_to item.name, item_path(item) %></h5>
                <div class="card-text d-flex justify-content-between align-items-center">
                  <p class="m-0">$<%= item.price %>/night</p>
                  <div class="location-wrapper">
                    <span class="location-text"><%= item.location %></span>
                    <i class="location-icon fas fa-map-marker-alt"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <div class="row">
      <div class="col-md-12">
        <p>No items to display.</p>
      </div>
    </div>
  <% end %>
</div>
<div class="line"></div>
