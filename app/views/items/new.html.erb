<div class="container mt-5">
  <h1>Add new item</h1>

  <%= simple_form_for(@item, html: { class: "row g-3" }) do |f| %>
    <div class="col-md-6">
      <%= f.input :name, label: "Item Name", input_html: { class: "form-control" } %>
    </div>
    <div class="col-md-6">
      <%= f.input :price, label: "Price", input_html: { class: "form-control" } %>
    </div>
    <div class="col-md-12">
      <%= f.input :description, label: "Description", input_html: { class: "form-control" } %>
    </div>
    <div class="col-md-12">
      <%= f.input :location, label: "Location", input_html: { class: "form-control" } %>
    </div>
    <div class="col-md-6">
      <%= f.input :max_guests, label: "Max. Guests", input_html: { class: "form-control" } %>
    </div>
    <div class="col-md-6">
      <%= f.input :category, collection: ["Big Dog", "Medium Dog", "Small Dog", "Multiple Dogs", "Woodland",
        "Beachfront", "City", "Home-from-home"], prompt: "Select a category" %>
    </div>
    <div class="col-md-6">
      <%= f.input :date_available_from, label: "Available Date", input_html: { class: "form-control" } %>
    </div>
    <div class="col-md-6">
      <%= f.input :date_available_until, label: "Available Until", input_html: { class: "form-control" } %>
    </div>

    <div class="col-md-12">
      <%= f.input :photos, as: :file, label: "Upload Photos", input_html: { multiple: true, class: "form-control" } %>
    </div>
    <div class="col-md-12">
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= link_to "Back to search results", root_path, class: "btn btn-secondary mt-3 me-2" %>
  <%= link_to "Back to home", root_path, class: "btn btn-secondary mt-3" %>
</div>
