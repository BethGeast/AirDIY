<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title"><%= @item.name %></h2>
          <% @item.photos.each do |photo| %>
            <div class="d-flex justify-content-center mb-3">
              <%= cl_image_tag photo.key, width: 300, height: 200, crop: :fill, class: "rounded" %>
            </div>
          <% end %>
          <p class="card-text">Price per day: <%= @item.price %>$ || Location: <%= @item.location %> || Available from: <%= @item.date_available %></p>
          <p class="card-text"><%= @item.description %></p>
          <%= link_to "Back to all items", items_path, class: "btn btn-primary mr-2" %>
          <%= link_to "Back to home", root_path, class: "btn btn-primary mr-2" %>
          <%= link_to "Edit this listing", edit_item_path(@item), class: "btn btn-secondary mr-2" %>
          <%= link_to "Delete this listing", item_path(@item),
            data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this listing?" },
            class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>
